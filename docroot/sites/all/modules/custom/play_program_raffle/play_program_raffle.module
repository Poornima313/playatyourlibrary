/* Raffle user list by filter form */

function raffle_user_list($form, &$form_state) {

  $raffle_id = $_POST['raffle_id'];
  $rf_drawing_name = $_POST['rf_drawing_name'];
  $winners_selected = $_POST['no_needed'];
  $rf_grade = $_POST['rf_grade'];
  $rf_library = $_POST['rf_library'];
  $rf_sch = $_POST['rf_sch'];
  $rf_all = $_POST['rf_all'];
  $rf_this = $_POST['rf_this'];
  $rf_dob_sdate = $_POST['rf_dob_sdate'];
  $rf_dob_edate = $_POST['rf_dob_edate'];

  $library_id = explode(',', $rf_library);
  $school_id = explode(',', $rf_sch);
  $grade_id = explode(',', $rf_grade);

  $query = db_select('eck_reward','eck');
  $query->join('field_data_field_rf_receieved_reward','rf_win','eck.id = rf_win.entity_id');
  $query->join('field_data_field_raffle_claim_id','claim','eck.id = claim.entity_id');
  $query->join('field_data_field_raffle_drawing_name','rf_draw','eck.id = rf_draw.entity_id');
  $query->join('users','u','u.uid = eck.uid');
  $query->join('profile','pf','pf.uid = u.uid');
  $query->join('field_data_field_library_branch','lb_brnch','lb_brnch.entity_id = pf.pid');
  $query->join('field_data_field_school','sch','sch.entity_id = pf.pid');
  $query->join('field_data_field_user_grade','grade','grade.entity_id = pf.pid');
  $query->join('field_data_field_first_name','fname','fname.entity_id = pf.pid');
  $query->join('field_data_field_last_name','lname','lname.entity_id = pf.pid');
  $query->join('field_data_field_user_birthday','bday','bday.entity_id = pf.pid');
  $query->join('field_data_field_phone_number','c_no','c_no.entity_id = pf.pid');
  $query->fields('u', array('name','uid'));
  $query->fields('rf_win',array('field_rf_receieved_reward_value'));
  $query->fields('rf_draw',array('field_raffle_drawing_name_value'));
  $query->fields('pf', array('pid'));
  $query->fields('eck', array('id'));
  $query->fields('sch', array('field_school_tid'));
  $query->fields('grade', array('field_user_grade_tid'));
  $query->fields('lb_brnch', array('field_library_branch_tid'));
  $query->fields('fname', array('field_first_name_value'));
  $query->fields('lname', array('field_last_name_value'));
  $query->fields('bday', array('field_user_birthday_value'));
  $query->fields('c_no', array('field_phone_number_value'));
  $query->condition('eck.type','raffle_claim');
  $query->condition('claim.field_raffle_claim_id_target_id', $raffle_id);
  $query->condition('lb_brnch.field_library_branch_tid',$library_id);
  $query->condition('sch.field_school_tid',$school_id);
  $query->condition('grade.field_user_grade_tid',$grade_id);
  $query->condition('rf_win.field_rf_receieved_reward_value',array(0,1));
  $result_all = $query->execute()->fetchAll();

  $tbl_header = array(
    'Username',
    'First name',
    'Last name',
    'Date of birth',
    'Email Address',
    'Phone Number',
    'Name of Drawing',
    'Filters Used'
  );

  foreach ($result_all as $key => $value) {

    $rewardStatus = $value->field_rf_receieved_reward_value;
    $drawName = $value->field_raffle_drawing_name_value;

    if ($rf_all) {
      if ($rewardStatus == 0 || $rewardStatus == 1) {
        $result[] = $value;
      }
    } else if ($rf_this) {
      if ($drawName == $rf_drawing_name) {
        $result[] = $value;
      }
    } else {
      if ($rewardStatus == 0) {
        $result[] = $value;
      }
    }
  }

  $arraySize = sizeof($result);
    
  foreach ($result as $value) {
    $user_uid[] = $value->uid;
  }
 
  for ($i = 0; $i < $winners_selected; $i++){
    if (sizeof($user_uid) > 0){
      $nn = rand(0, sizeof($user_uid)-1);
      $val_to_claim = $user_uid[$nn];

      foreach ($result as $value) {

        if($value->uid == $val_to_claim){
          $profile_id = $value->pid;
          // email is optional, getting user email
          $query_email = db_select('field_data_field_email','em');
          $query_email->condition('em.entity_id',$profile_id);
          $query_email->fields('em',array('field_email_email'));
          $result_email = $query_email->execute()->fetchAssoc();

          $user_mail = $result_email['field_email_email'];

          $school_tid = $value->field_school_tid;
          $branch_tid = $value->field_library_branch_tid;
          $grade_tid = $value->field_user_grade_tid;
          $user_bday = $value->field_user_birthday_value;

          $time_stamp_dob = strtotime($user_bday);
          $current_time = time();
          $user_age = floor(($current_time - $time_stamp_dob) / (60*60*24*365));

          $u_age = FALSE;
          if(($rf_dob_sdate <= $user_age) && ($user_age <= $rf_dob_edate)) {
            $u_age = TRUE;
          } else if(empty($rf_dob_edate) || empty($rf_dob_sdate)) {
            $u_age = TRUE;
          }

          $user_school = taxonomy_term_load($school_tid);
          $user_school = $user_school->name;
          $user_branch = taxonomy_term_load($branch_tid);
          $user_branch = $user_branch->name;
          $user_grade = taxonomy_term_load($grade_tid);
          $user_grade = $user_grade->name;

          $user_uid = $value->uid;
          $username = $value->name;
          $user_fname = $value->field_first_name_value;
          $user_lname = $value->field_last_name_value;
          $user_age = $user_age;
          $user_email = $value->field_email_email;
          $user_phn_number = $value->field_phone_number_value;
          $filters_used = $user_branch .' '. $user_school.' '.$user_grade;

          if ($u_age){
            $tbl_rows[] = array(
              array( 'data' => $username),
              array( 'data' => $user_fname),
              array( 'data' => $user_lname),
              array( 'data' => $user_age),
              array( 'data' => $user_mail),
              array( 'data' => $user_phn_number),
              array( 'data' => $rf_drawing_name),
              array( 'data' => $filters_used),
            );

            pl_reward_claim($raffle_id, $user_uid, 'reward', $filters_used, $rf_drawing_name, 1);
            break;
          }
        }
      }

      foreach ($result as $userInfo) {

        if($userInfo->uid == $val_to_claim){
          $userEntityId = $userInfo->id;
          update_raffle_winner_tbl($userEntityId, $rf_drawing_name);
        }
      }

      foreach ($user_uid as $value1) {
        if ($value1 <> $val_to_claim ){
          $distinct_ids[] =  $value1;
        }
      }

      $user_uid = $distinct_ids;
      unset($distinct_ids);
